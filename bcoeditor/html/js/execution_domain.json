{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://biocomputeobject.org/schemas/execution_domain.json",
    "type": "object",
    "title": "execution_domain",
    "description": "TODO",
    "required": [
        "script_access_type",
        "script",
        "script_driver",
        "software_prerequisites",
        "external_data_endpoints",
        "env_parameters"
    ],
    "additionalProperties": false,
    "properties": {
        "script_access_type": {
            "type": "string",
            "title": "script_access_type",
            "enum": [
                "URI",
                "text"
            ],
            "description": "Indication of whether the code of the 'script' to execute the BioCompute Object is accessed as an external file via HTTP (URI) or in-line text in the script field."
        },
        "script": {
            "type": "array",
            "title": "script",
            "description": "Points to internal or external references to a script object that was used to perform computations for this BCO instance",
            "items": {
                "type": "string",
                "title": "script",
                "description": "An internal or external reference to a script object",
                "examples": [
                    "https://example.com/workflows/antiviral_resistance_detection_hive.py"
                ]
            }
        },
        "script_driver": {
            "type": "string",
            "title": "script_driver",
            "description": "Specification of the kind of executable that can be launched in order to perform a sequence of commands described in the script in order to run the pipelin",
            "examples": [
                "hive",
                "cwl-runner",
                "shell"
            ]
        },
        "software_prerequisites": {
            "type": "array",
            "title":"software_prerequisites",
            "description": "Minimal necessary prerequisites, library, tool versions needed to successfully run the script to produce BCO.",
            "items": {
                "type": "object",
                "title":"software_prerequisite",
                "description": "A necessary prerequisite, library, or tool version.",
                "required": [
                    "name",
                    "version",
                    "uri"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "title":"name",
                        "description": "TODO",
                        "examples": [
                            "HIVE-hexagon"
                        ]
                    },
                    "version": {
                        "type": "string",
                        "title":"version",
                        "description": "TODO",
                        "examples": [
                            "babajanian.1"
                        ]
                    },
                    "uri": {
                        "$ref": "#/definitions/uri"
                    }
                }
            }
        },
        "external_data_endpoints": {
            "type": "array",
            "title":"external_data_endpoints",
            "description": "Minimal necessary domain-specific external data source access in order to successfully run the script to produce BCO.",
            "items": {
                "type": "object",
                "title":"external_data_endpoint",
                "description": "Requirement for network protocol endpoints used by a pipelineâ€™s scripts, or other software.",
                "required": [
                    "name",
                    "url"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Description of the service that is accessed",
                        "examples": [
                            "HIVE",
                            "access to e-utils"
                        ]
                    },
                    "url": {
                        "type": "string",
                        "description": "The endpoint to be accessed.",
                        "default": "",
                        "examples": [
                            "https://hive.biochemistry.gwu.edu/dna.cgi?cmd=login"
                        ]
                    }
                }
            }
        },
        "env_parameters": {
            "type": "object",
            "description": "Environmental parameters that are useful to configure the execution environment on the target platform.",
            "required": [
                "key",
                "value"
            ],
            "additionalProperties": false,
            "properties": {
                "key": {
                    "type": "string",
                    "description": "Specific to each platform",
                    "default": "",
                    "examples": [
                        "HOSTTYPE"
                    ]
                },
                "value": {
                    "type": "string",
                    "description": "TODO",
                    "examples": [
                        "x86_64-linux"
                    ]
                }
            }
        }
    }
}
