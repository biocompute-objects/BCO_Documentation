{
  "type": "object",
  "required": [
    "fhir_endpoint",
    "fhir_version",
    "fhir_resources"
  ],
  "properties": {
    "fhir_endpoint": {
      "type": "string",
      "examples": [
        "http://fhirtest.uhn.ca/baseDstu3"
      ],
      "description": "Base uri of FHIR server where the resources are stored",
      "format": "uri"
    },
    "fhir_version": {
      "type": "string",
      "description": "FHIR version of the server endpoint"
    },
    "fhir_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "title":"fhir_resource",
        "required": [
          "fhir_resource",
          "fhir_id"
        ],
        "properties": {
          "fhir_resource": {
            "type": "string",
            "description": "Type of FHIR resource used"
          },
          "fhir_id": {
            "type": "string",
            "description": "server-specific identifier string"
          }
        }
      }
    }
  }
}
