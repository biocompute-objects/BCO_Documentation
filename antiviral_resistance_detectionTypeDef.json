{
    "_type": "antiviral_resistance_detection",
    "_inherit" : "biocompute_base_type",
    "_fields" : {
        "extension_domain":{
            "FHIR_extension" : {
                "_type" : "json",
                "_comment" : ["linkage to FHIR"],
                "_multi_value" : true,
                "_fields":{
                    "fhir_endpoint_resource": {
                        "_type" : "string"
                    },
                    "fhir_endpoint_url": {
                        "_type" : "string"
                    },
                    "fhir_endpoint_ids": {
                        "_type" : "string",
                        "_multi_value" : true
                    }
                }
            },
            "github_extension": {
                "_type" : "json",
                "_comment" : ["linkage to GitHub"],
                "_multi_value" : true,
                "_fields":{
                    "gitHub_address": {
                        "_type" : "uri"
                    },
                       "github_repository":{
                        "_type" : "string"
                    }
                }
            }
        },
        "parametric_domain": {
            "HIVE-hexagon" : {
                "_type" : "json",
                "_comment" : ["visible parameters for HIVE-hexagon"],
                "_multi_value" : true,
                "_fields":{
                    "seed": {
                        "_type" : "integer" 
                    },
                    "minimum_match_len": {
                        "_type" : "integer"
                    },
                    "divergence_threshold_percent": {
                        "_type" : "real"
                    }
                }
            },
            "HIVE-heptagon": {
                "_type" : "json",
                "_comment" : ["visible parameters for HIVE-heptagon"],
                "_multi_value" : true,
                "_fields":{
                    "minimum_coverage": {
                        "_type" : "integer"
                    },
                    "freq_cutoff": {
                        "_type" : "real"
                    }
                }
            }
        },
        "io_domain" : {
            "input_subdomain" : {
                "_type" : "json",
                "_comment" : ["HIVE uses 'query' to define sequences reads and 'subject to define reference genome"],
                    "query" :{
                        "_type" : "json",
                        "_multi_value" : true,
                        "_fields":{
                            "name":{
                                "_type" : "string"
                            },
                            "source": {
                                "_type" : "uri"
                            }
                        }
                    },
                    "subject": {
                        "_type" : "json",
                        "_multi_value" : true,
                        "_fields":{
                            "name":{
                                "_type" : "string"
                            },
                            "source": {
                                "_type" : "uri"
                            }
                        }
                    }
            }
        },
        "error_domain": {
            "empirical_error": {
                "_type" : "json",
                "_comment" : ["measured by running the algorithm on multiple data samples of the usability domain or in carefully designed in-silico spiked data"],
                "_optional" : true,
                "_fields":{
                    "false negative alignment hits": {
                        "_type" : "string"
                    },
                    "false discovery": {
                        "_type" : "string"
                    }
                }
            },
            "algorithmic_error": {
                "_type" : "json",
                "_comment" : ["measured in repeatability experiments of multiple runs or using some rigorous mathematical modeling of the accumulated errors"],
                "_optional" : true,
                "_fields":{
                    "false positive mutation calls discovery": {
                        "_type" : "string"
                    },
                    "false_positive_mutation_calls_discovery": {
                        "_type" : "string"
                    },
                    "false_discovery": {
                        "_type" : "string"
                    }
                }
            }
        }
    }
}
