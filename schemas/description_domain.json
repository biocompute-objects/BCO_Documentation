{
  "type": "object",
  "title": "descsription_domain",
  "description": "",
  "default": null,
  "required": [
    "keywords",
    "pipeline_steps"
  ],
  "definitions": {
    "resource": {
      "title": "resource",
      "description": "",
      "required": [
        "address",
        "access_time"
      ],
      "properties": {
        "address": {
          "type": "string",
          "examples": [
            "https://hive.biochemistry.gwu.edu/dna.cgi?cmd=objFile&ids=514683"
          ],
          "format": "uri"
        },
        "access_time": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  
  "properties": {
    "keywords": {
      "type": "array",
      "title": "keywords",
      "description": "",
      "items": {
        "type": "object",
        "title": "keyword",
        "description": "",
        "required": [
          "key",
          "value"
        ],
        "properties": {
          "key": {
            "type": "string",
            "title": "key",
            "description": "",
            "examples": [
              "search terms"
            ]
          },
          "value": {
            "type": "array",
            "title": "value",
            "description": "",
            "items": {
              "type": "string",
              "title": "value",
              "description": "",
              "examples": [
                "HCV1a",
                "Ledipasvir",
                "antiviral resistance",
                "SNP",
                "amino acid substitutions"
              ]
            }
          }
        }
      }
    },
    "xref": {
      "type": "array",
      "title": "xref",
      "description": "",
      "items": {
        "type": "object",
        "title": "xref",
        "description": "",
        "required": [
          "namespace",
          "name",
          "ids",
          "access_time"
        ],
        "properties": {
          "namespace": {
            "type": "string",
            "title": "namespace",
            "description": "",
            "examples": [
              "pubchem.compound"
            ]
          },
          "name": {
            "type": "string",
            "title": "name",
            "description": "",
            "default": "",
            "examples": [
              "PubChem-compound"
            ]
          },
          "ids": {
            "type": "array",
            "title": "ids",
            "description": "",
            "items": {
              "type": "string",
              "title": "ids",
              "description": "",
              "examples": [
                "67505836"
              ]
            }
          },
          "access_time": {
            "type": "string",
            "title": "access_time",
            "description": "",
            "format": "date-time"
          }
        }
      }
    },
    "pipeline_steps": {
      "type": "object",
      "title": "pipeline_steps",
      "description": "",
      "required": [
        "tool"
      ],
      "properties": {
        "tool": {
          "type": "array",
          "title": "tool",
          "description": "",
          "items": {
            "$id": "#/properties/pipeline_steps/properties/tool/items",
            "type": "object",
            "title": "tool",
            "description": "",
            "required": [
              "step_number",
              "name",
              "description",
              "version",
              "input_list",
              "output_list"
            ],
            "properties": {
              "step_number": {
                "type": "integer",
                "title": "step_number",
                "description": ""
              },
              "name": {
                "type": "string",
                "title": "name",
                "description": "this is a recognized name of the software tool",
                "examples": [
                  "HIVE-hexagon"
                ]
              },
              "description": {
                "type": "string",
                "title": "description",
                "description": "",
                "examples": [
                  "Alignment of reads to a set of references"
                ]
              },
              "version": {
                "type": "string",
                "title": "version",
                "description": "",
                "examples": [
                  "1.3"
                ]
              },
              "prerequisite": {
                "type": "array",
                "title": "prerequisite",
                "description": "reference or required prereqs",
                "items": {
                  "type": "object",
                  "title": "prerequisite",
                  "description": "",
                  "required": [
                    "name",
                    "source"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "name",
                      "description": "Public searchable name for reference or prereq",
                      "default": "",
                      "examples": [
                        "Hepatitis C virus genotype 1"
                      ]
                    },
                    "source": {
                      "title": "FIXME: base_type_BioCompute.json defines this as a string uri, but the specs define it as an object",
                      "description": "",
                      "$ref": "#/definitions/resource"
                    }
                  }
                }
              },
              "input_list": {
                "$id": "#/properties/pipeline_steps/properties/tool/items/properties/input_list",
                "type": "array",
                "title": "input_list",
                "description": "",
                "items": {
                  "$ref": "#/definitions/resource"
                }
              },
              "output_list": {
                "type": "array",
                "title": "output_list",
                "description": "",
                "items": {
                  "$ref": "#/definitions/resource"
                }
              }
            }
          }
        }
      }
    }
  }
