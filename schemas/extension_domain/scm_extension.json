{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://biocomputeobject.org/schemas/extension_domain/scm_extension.json",
  "type": "object",
  "required": [
    "scm_repository",
    "scm_type",
    "scm_branch",
    "scm_path",
    "scm_preview"
  ],
  "properties": {
    "scm_repository": {
			"type": "string",
			"examples": [ "https://github.com/example/repo1" ],
			"format": "uri"
		},
    "scm_type": {
			"type": "string",
			"examples": [ "git" ]
		},
    "scm_branch": {
			"type": "string",
			"examples": [ "c9ffea0b60fa3bcf8e138af7c99ca141a6b8fb21" ]
		},
    "scm_path": {
			"type": "string",
			"examples": [ "workflow/hive-viral-mutation-detection.cwl" ],
			"format": "uri-reference"
		},
    "scm_preview": {
			"type": "string",
			"examples": [ "https://github.com/example/repo1/blob/c9ffea0b60fa3bcf8e138af7c99ca141a6b8fb21/workflow/hive-viral-mutation-detection.cwl" ],
			"format": "uri"
		}
  }
}
